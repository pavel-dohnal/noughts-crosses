@import '../../../bower_components/normalize-css/normalize.css'
@import '../../../bower_components/este-library/este/css'
@import '../../../bower_components/stylus-nib'
@import 'variables.styl'
@import 'type.styl'

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-tap-highlight-color transparent

// So here's my idea: you still keep px size adjustments at the document level
// so you can make easy/efficient sweeping size changes. But then each module on
// the page has a font-size set in rem. Actual text elements (h1, h2, p, li,
// whatever), if you size them at all, are sized in em, and thus become relative
// to the module. From: http://css-tricks.com/rems-ems.

*, ::after, ::before
  box-sizing content-box

body
  font-family 'Segoe UI', 'Lucida Grande','Ubuntu','sans-serif'
  font-size 16px
  line-height 1.4
  background-color #eee

  .app
    &.active-page-home
      @import 'pages/home'
    &.active-page-notfound
      @import 'pages/notfound'

    padding 0 1.5em

  .game-board
      div.cosi
        display flex
        justify-content space-around
        align-items center
        width 50px
        height 50px
      tr
        border-collapse collapse
        border-top 5px solid black
        border-bottom 5px solid black
        td
          padding 0
          width 50px
          height 50px
          border-left 5px solid black
          border-right 5px solid black
          span
            transition-timing-function cubic-bezier(.94,.29,.13,.7)
            transition all 0.4s
            transition-property: width, height
            background-position center center
            background-size 100%
            background-repeat no-repeat
            display block
            width 0px
            height 0px
            display block
          &.cross div span
            background-image url("/app/client/img/cross.svg")
            width 50px
            height 50px
          &.nought div span
            background-image url("/app/client/img/nought.svg")
            width 50px
            height 50px

        td:last-child
          border-right none
        td:first-child
          border-left none
      tr:first-child
        border-top none
      tr:last-child
        border-bottom none

